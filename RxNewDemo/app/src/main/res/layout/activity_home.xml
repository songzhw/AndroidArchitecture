<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/title_home" android:textSize="22dp"/>
        <Button android:id="@+id/btnHome" android:layout_width="150dp" android:layout_height="40dp"
            android:text="action" android:layout_marginTop="35dp"/>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom" android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
